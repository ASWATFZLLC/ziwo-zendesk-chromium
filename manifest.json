{ "background":
  { "scripts": [ "js/libs/pegjs.min.js"
               , "js/libs/yolojs/lib/web/bootstrap.js"
               , "js/libs/EventEmitter.min.js"
               , "js/libs/socket.io-1.3.5.js"
               , "js/core.js"
               ]
  }
, "content_scripts":
  [ { "all_frames": true
    , "js": [ "js/inject-ziwo.js" ]
    , "matches": [ "*://*.aswat.co/*" ]
    , "run_at": "document_end"
    }
  , { "all_frames": true
    , "js": [ "js/inject-zendesk.js" ]
    , "matches": [ "*://*.zendesk.com/*" ]
    , "run_at": "document_start"
    }
  ]
, "description": "Bridge between Ziwo and HelpDesks"
, "icons":
  { "128": "images/ds_icon_128.png"
  , "16": "images/ds_icon_16.png"
  , "48": "images/ds_icon_48.png"
  , "64": "images/ds_icon_64.png"
  }
, "manifest_version": 2
, "name": "Ziwo HelpDesk Bridge"
, "options_ui": { "page": "views/options.html" }
, "content_security_policy": "object-src 'self'; script-src 'self' 'unsafe-eval'; connect-src 'self' ws://*.aswat.co https://*.aswat.co https://*.zendesk.com"
, "permissions":
  [ "tabs", "webRequest"
  , "*://*.aswat.co/*"
  , "*://*.zendesk.com/*"
  ]
, "version": "0.0.1"
}
